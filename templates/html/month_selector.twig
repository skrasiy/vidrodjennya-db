<div class="container interface">
	<h2 class="text-secondary">{% trans 'SELECT_DATE' %}</h2>
	{% set type = page.path['slice'][1] %}
	<h4 class="text-center text-secondary">
		{% if type == 'committee-protocol' %}
			{% trans 'PROTOCOL' %} {{ 'DOCS_ADMISSION_COMMITTEE_DESCRIPTION'|trans|lower }}
		{% endif %}
	</h4>
	<hr>
	<div class="row justify-content-center">

		<div class="col-sm-8 col-md-5 col-lg-3">
			<form class="form-inline" action="{{ page.self }}" method="POST" enctype="multipart/form-data">
				<input type="hidden" name="export" value="true">
				<input type="hidden" name="doctype" value="{{ type }}">
				<div class="nobr">
				<select name="month" class="form-control" id="month">
					{% for i in 1..thisMonth %}
					{% set monthName = 'MONTH'~i %}
					<option value="{{i}}"{{(i == thisMonth)?' selected'}}>{{ monthName|trans}} {{thisYear}}</option>
					{% endfor %}
				</select>
				<button type="submit" class="btn btn-primary ml-2">{{'BTN_SELECT'|trans|upper}}</button>
				</div>
			</form>
		</div>

	</div>
	<div class="row">
		<div class="col text-center mt-4">
			<a class="btn btn-secondary btn-sm mr-2" href="{{ page.root ~ 'docs' }}" role="button">{{ 'BACK'|trans|upper }}</a>
			<a class="btn btn-secondary btn-sm" href="{{ page.root }}" role="button">{{ 'MAIN_PAGE'|trans|upper }}</a>
		</div>
	</div>
</div>